{
  "id": "com.layerexport.plugin",
  "name": "Layer Export Plugin",
  "version": "1.0.0",
  "main": "index.html",
  "host": {
    "app": "PS",
    "minVersion": "24.0.0"
  },
  "ui": {
    "type": "panel",
    "menu": [
      {
        "id": "layerExportPanel",
        "label": "Layer Export"
      }
    ]
  },
  "icons": [
    {
      "width": 23,
      "height": 23,
      "path": "icons/icon@1x.png",
      "scale": [
        1
      ]
    },
    {
      "width": 46,
      "height": 46,
      "path": "icons/icon@2x.png",
      "scale": [
        2
      ]
    },
    {
      "width": 92,
      "height": 92,
      "path": "icons/icon@4x.png",
      "scale": [
        4
      ]
    }
  ],
  "entrypoints": [
    {
      "type": "panel",
      "id": "layerExportPanel",
      "label": "Layer Export Plugin",
      "minimumSize": {
        "width": 280,
        "height": 350
      },
      "maximumSize": {
        "width": 500,
        "height": 800
      },
      "preferredDockedSize": {
        "width": 320,
        "height": 450
      },
      "preferredFloatingSize": {
        "width": 350,
        "height": 500
      }
    }
  ],
  "manifestVersion": 4,
  "requiredPermissions": {
    "allowCodeGenerationFromStrings": true,
    "launchProcess": {
      "schemes": [
        "https"
      ],
      "extensions": [
        ".html"
      ]
    },
    "webview": {
      "allow": "yes",
      "domains": [
        "https://*.adobe.com"
      ]
    },
    "localFileSystem": "fullAccess",
    "clipboard": "readAndWrite"
  }
}